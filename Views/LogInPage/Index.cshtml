@{
	ViewBag.Title = "LogInPage";
}

@model Memcomb.Models.UserLogin
<a href="~/Views/LogInPage/Index.cshtml">~/Views/LogInPage/Index.cshtml</a>

<link href="@Url.Content("~/Content/LoginPage.css")" rel="stylesheet" type="text/css" />

<head class="head">
	<div class="neon-text">
		MEMCOMB
		<img src="~/Images/memcombLogoNew.png" class="img" />
	</div>
</head>

<body class="body">

	@using (Html.BeginForm("Login", "LogInPage", FormMethod.Post))
	{
		@Html.AntiForgeryToken()

		<div class="form-horizontal">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })

			@if (ViewBag.Message != "")
			{
				<div class="text-danger">@ViewBag.Message</div>
			}

			<div class="form-group">
				<div>
					<div class="labelText">
						Email
					</div>
					<!--@Html.LabelFor(model => model.Email_ID, htmlAttributes: new { @class = "control-label labels" })-->
					@Html.EditorFor(model => model.Email_ID, new { htmlAttributes = new { @class = "form-control inputFields", placeholder = "example@email.com" } })
					@Html.ValidationMessageFor(model => model.Email_ID, "", new { @class = "text-danger" })
				</div>
			</div>
			<div class="form-group">
				<div>
					<div class="labelText">
						Password
					</div>
					<!--@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label labels" })-->
					@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control inputFields", placeholder = "Password", @type = "password" } })
					@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div>
					<input type="submit" value="Login" class="logInBtn" />
					<a href="@Url.Action("Index", "SignUpPage")" class="signUpBtn">
					Sign Up
				</a>
				</div>
			</div>
			<a href="@Url.Action("Create", "SignUps")">
				Forgot password?
			</a>
		</div>
	}
</body>